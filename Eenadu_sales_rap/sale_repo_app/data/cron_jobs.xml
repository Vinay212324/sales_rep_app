<odoo>
    <data noupdate="1">
        <!-- Cron job to poll every 30 minutes; function executes only at 7:30 PM IST -->
        <record id="ir_cron_send_daily_url_messages" model="ir.cron">
            <field name="name">Poll for Daily URL Messages (Execute at 7:30 PM IST)</field>
            <field name="model_id" ref="model_verification_otp"/>
            <field name="state">code</field>
            <field name="code">model.send_message_sales_rep()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall">True</field>  <!-- Ensures execution across all workers -->
            <field name="active">True</field>
            <!-- Next run: Starting from 7:30 PM IST on Nov 12, 2025 (14:00 UTC for IST=UTC+5:30) -->
            <field name="nextcall">2025-11-12 14:00:00</field>
        </record>
    </data>
</odoo>