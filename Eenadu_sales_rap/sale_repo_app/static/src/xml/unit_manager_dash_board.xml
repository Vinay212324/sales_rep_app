<templates xml:space="preserve">
  <t t-name="sale_repo_app.unit_manager_dashboard_template" owl="1">
    <div class="container-fluid p-3" style="height: 100vh; overflow-y: auto; background-color: #f8f9fa;">
      <!-- Loading Overlay -->
      <t t-if="state.loading">
        <div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center bg-light bg-opacity-75" style="z-index: 1050;">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </t>

      <!-- Header -->
      <div class="row mb-4">
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-center bg-white p-3 rounded shadow-sm">
            <div>
              <h5 class="mb-1">Unit Manager Dashboard</h5>
              <small class="text-muted">Total Staff: <t t-esc="state.count"/> | Total Customers: <t t-esc="state.cu_count"/></small>
            </div>
            <i class="fa fa-user fa-2x text-secondary"></i>
          </div>
        </div>
      </div>

      <!-- Success/Error Messages -->
      <t t-if="state.error">
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
          <i class="fa fa-exclamation-triangle me-2"></i>
          <t t-esc="state.error"/>
          <button type="button" class="btn-close" t-on-click="() => state.error = null"></button>
        </div>
      </t>

      <!-- Main Action Buttons -->
      <div class="row g-3 mb-4">
        <div class="col-md-6">
          <button class="btn btn-outline-primary w-100 py-4 rounded shadow-sm" t-on-click="openStaffList">
            <i class="fa fa-users fa-2x mb-2 d-block"></i>
            <h6 class="mb-0">Number of Resources</h6>
            <small class="text-muted">Staff count - (<t t-esc="state.count"/>)</small>
          </button>
        </div>
        <div class="col-md-6">
          <button class="btn btn-primary w-100 py-4 rounded shadow-sm" t-on-click="filteredAgenciesList_open" style="color: white;">
            <i class="fa fa-building fa-2x mb-2 d-block"></i>
            <h6 class="mb-0" style="color:white;">View All Customer Forms</h6>
            <small class="text-white-50">Agencies &amp; Forms count - (<t t-esc="state.cu_count"/>)</small>
          </button>
        </div>
      </div>

      <!-- Staff List Section -->
      <t t-if="state.number_of_resources">
        <div class="row mb-4">
          <div class="col-12">
            <div class="card bg-white rounded shadow-sm">
              <div class="card-header bg-primary text-white">
                <h6 style="color:white;" class="mb-0"><i class="fa fa-users me-2"></i><t t-if="state.status === 'active'">Approved Staff</t><t t-else="">Staff Waiting for Approval</t> (<t t-esc="filteredStaffList.length"/>)</h6>
              </div>
              <div class="card-body p-0">
                <div class="p-3">
                  <input type="text" class="form-control mb-3" placeholder="Search staff..." t-model="state.searchTerm"/>
                </div>
                <div class="table-responsive" style="max-height: 50vh; overflow-y: auto;">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Name</th>
                        <th>Unit</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>User ID</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <t t-foreach="filteredStaffList" t-as="staff" t-key="staff.id">
                        <tr t-if="staff.status === state.status">
                          <td><strong><t t-esc="staff.name"/></strong></td>
                          <td><t t-esc="staff.unit_name"/></td>
                          <td><t t-esc="staff.email || 'N/A'"/></td>
                          <td><t t-esc="staff.phone"/></td>
                          <td><t t-esc="staff.id"/></td>
                          <td>
                            <span t-att-class="'badge bg-' + (staff.status === 'active' ? 'success' : 'warning')" style="color: white;"><t t-esc="staff.status"/></span>
                          </td>
                          <td>
                            <t t-if="state.status === 'active'">
                              <button class="btn btn-sm btn-primary" t-on-click="() => this.loadStaffDetails(staff.login, staff.id, staff.name)">
                                <i class="fa fa-eye"></i> View
                              </button>
                            </t>
                            <t t-else="">
                              <button class="btn btn-sm btn-success" t-on-click="() => this.loadStaffUnactive(staff.login, staff.id, staff.name)">
                                <i class="fa fa-check"></i> Activate
                              </button>
                            </t>
                          </td>
                        </tr>
                      </t>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </t>

      <!-- Agencies List Section -->
      <t t-if="state.view_all_customer_forms">
        <div class="row mb-4">
          <div class="col-12">
            <div class="card bg-white rounded shadow-sm">
              <div class="card-header bg-primary text-white">
                <h6 style="color:white;" class="mb-0"><i class="fa fa-building me-2"></i>Agencies (<t t-esc="filteredAgenciesList.length"/>)</h6>
              </div>
              <div class="card-body p-0">
                <div class="p-3">
                  <input type="text" class="form-control mb-3" placeholder="Search agency..." t-model="state.searchAge"/>
                </div>
                <div class="table-responsive" style="max-height: 50vh; overflow-y: auto;">
                  <table class="table table-hover mb-0">
                    <thead class="table-light">
                      <tr>
                        <th>Code</th>
                        <th>Location</th>
                        <th>Phone</th>
                        <th>Unit</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <t t-foreach="filteredAgenciesList" t-as="agency" t-key="agency.id">
                        <tr>
                          <td><strong><t t-esc="agency.code"/></strong></td>
                          <td><t t-esc="agency.location_name"/></td>
                          <td><t t-esc="agency.phone"/></td>
                          <td><t t-esc="agency.unit_name"/></td>
                          <td>
                            <button class="btn btn-sm btn-primary" t-on-click="() => this.Open_agencies_List(agency.phone, agency.id, agency.location_name)">
                              <i class="fa fa-eye"></i> View Forms
                            </button>
                          </td>
                        </tr>
                      </t>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </t>

      <!-- Staff Details Actions -->
      <t t-if="!state.number_of_resources &amp;&amp; state.attend_customer &amp;&amp; state.status === 'active'">
        <div class="row g-3">
          <div class="col-md-6">
            <button class="btn btn-outline-primary w-100 py-3 rounded shadow-sm" t-on-click="today_attendance">
              <i class="fa fa-clock fa-2x mb-2 d-block"></i>
              <h6 class="mb-0">Staff Attendance</h6>
            </button>
          </div>
          <div class="col-md-6">
            <button class="btn btn-primary w-100 py-3 rounded shadow-sm" t-on-click="totalCustomerForms" style="color: white;">
              <i class="fa fa-file-alt fa-2x mb-2 d-block"></i>
              <h6 class="mb-0">Total Customer Forms</h6>
            </button>
          </div>
        </div>
      </t>
    </div>
  </t>
</templates>