<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sale_repo_app.SelfDashboardTemplate" owl="1">
        <div style="display: flex; flex-direction: row; justify-content: center; height: 100vh;">
            <!-- Container with scroll enabled -->
            <div class="o_container"
                 style="
                    margin-top: 15px;
                    display: flex;
                    flex-direction: column;
                    justify-content: start;
                    height: 90vh;
                    overflow-y: auto;
                    padding: 20px;
                    width: 100%;
                    max-width: auto;
                 ">

                <h1 class="for_head">Houses Visited</h1>
                <p>Today's House Count: <span class="bold" t-esc="state.target"/></p>
                <p>Total Houses Visited: <span class="bold" t-esc="state.today_customer_forms_count"/></p>
                <p>Today's Target Left: <span class="bold" t-esc="state.target_left"/></p>

<!--                <h1 class="for_head">My Route Map</h1>-->
<!--                <p>Go to Route Map</p>-->

<!--                <h1 class="for_head">Reports</h1>-->
<!--                <p>Already Subscribed</p>-->
<!--                <p>15 Days Offer Accepted</p>-->
<!--                <p>15 Days Offer Rejected</p>-->

                <h1>Hello, <span t-esc="state.name"/>!</h1>

            </div>
        </div>
    </t>
</templates>
