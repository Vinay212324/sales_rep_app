<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_customer_form_tree" model="ir.ui.view">
        <field name="name">customer.form.tree</field>
        <field name="model">customer.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="agent_name"/>
                <field name="unit_name"/>
                <field name="date"/>
                <field name="time"/>
                <field name="mobile_number"/>
                <field name="city"/>
                <field name="profession"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_form_kanban" model="ir.ui.view">
    <field name="name">customer.form.kanban</field>
    <field name="model">customer.form</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="agent_name"/>
            <field name="unit_name"/>
            <field name="mobile_number"/>
            <field name="profession"/> <!-- Ensure 'profession' is also defined here -->
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click o_kanban_record">
                        <div class="oe_kanban_details">
                            <ul>
                                <li><strong>Agent:</strong> <field name="agent_name"/></li>
                                <li><strong>Unit:</strong> <field name="unit_name"/></li>
                                <li><strong>Phone:</strong> <field name="mobile_number"/></li>
                                <li><strong>Profession:</strong> <field name="profession"/></li>
                                <li><strong>Create Date:</strong> <field name="date"/></li>
                            </ul>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

    <record id="view_customer_form_form" model="ir.ui.view">
        <field name="name">customer.form.form</field>
        <field name="model">customer.form</field>
        <field name="arch" type="xml">
            <form string="Customer Form">
                <sheet>
                    <group>
                        <group>
                            <field name="agent_name"/>
                            <field name="agent_login"/>
                            <field name="unit_name"/>
                            <field name="date"/>
                            <field name="time"/>
                        </group>

                        <group string="Family Details">
                            <field name="family_head_name"/>
                            <field name="age"/>
<!--                            <field name="father_name"/>-->
<!--                            <field name="mother_name"/>-->
<!--                            <field name="spouse_name"/>-->
                        </group>
                        <group string="Address">
                            <field name="house_number"/>
                            <field name="street_number"/>
                            <field name="city"/>
                            <field name="pin_code"/>
                            <field name="address"/>
                            <field name="mobile_number"/>
                        </group>

                        <group string="Newspaper Details">
<!--                            <field name="eenadu_newspaper"/>-->
<!--                            <field name="feedback_to_improve_eenadu_paper"/>-->
<!--                            <field name="read_newspaper"/>-->
                            <field name="current_newspaper"/>
                            <field name="Start_Circulating"/>
<!--                            <field name="reason_for_not_taking_eenadu_newsPaper"/>-->
<!--                            <field name="reason_not_reading"/>-->
<!--                            <field name="free_offer_15_days"/>-->
<!--                            <field name="reason_not_taking_offer"/>-->
                        </group>

                        <group string="Employment">
                            <field name="employed"/>
<!--                            <field name="job_type"/>-->
<!--                            <field name="job_type_one"/>-->
<!--                            <field name="job_profession"/>-->
<!--                            <field name="job_designation"/>-->
<!--                            <field name="job_working_state"/>-->
<!--                            <field name="job_working_location"/>-->
<!--                            <field name="job_location_landmark"/>-->
<!--                            <field name="company_name"/>-->
                            <field name="profession"/>
<!--                            <field name="job_designation_one"/>-->
                        </group>

                        <group string="Geo Location">
                            <field name="face_base64" widget="image" class="oe_avatar"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="location_address"/>
                            <field name="Agency"/>
                            <field name="location_url" widget="url"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_form_search" model="ir.ui.view">
        <field name="name">customer.form.search</field>
        <field name="model">customer.form</field>
        <field name="arch" type="xml">
            <search string="Customer Form Search">
                <field name="agent_name"/>
                <field name="unit_name"/>
                <field name="date"/>
                <field name="city"/>
                <field name="agent_login"/>
                <field name="family_head_name"/>
                <field name="Agency"/>

                <!-- Today Filter -->
                <filter name="one_day_filter"
                        string="Today Customer Forms"
                        domain="[('date', '=', context_today())]"/>

                <!-- Unit Filter -->
                <filter name="unit_filter"
                        string="Unit"
                        domain="[]"
                        context="{'group_by':'unit_name'}"/>

                <!-- Date Group -->
                <filter name="date_group"
                        string="Date"
                        domain="[]"
                        context="{'group_by':'date'}"/>

                <!-- City Filter -->
                <filter name="city_filter"
                        string="City"
                        domain="[]"
                        context="{'group_by':'city'}"/>

                <!-- Agent Login Filter -->
                <filter name="agent_login_filter"
                        string="Agent Login"
                        domain="[]"
                        context="{'group_by':'agent_login'}"/>

                <!-- Family Head Filter -->
<!--                <filter name="family_head_filter"-->
<!--                        string="Family Head"-->
<!--                        domain="[]"-->
<!--                        context="{'group_by':'family_head_name'}"/>-->

                <!-- Agency Filter -->
                <filter name="agency_filter"
                        string="Agency"
                        domain="[]"
                        context="{'group_by':'Agency'}"/>


                <!-- Spot / First Filter -->
<!--                <filter name="spot_first_filter"-->
<!--                        string="Spot / First"-->
<!--                        domain="[]"-->
<!--                        context="{'group_by':'spot_or_first'}"/>-->
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="action_customer_form" model="ir.actions.act_window">
        <field name="name">History</field>
        <field name="res_model">customer.form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'edit': 0,'create': 0}</field>
        <field name="search_view_id" ref="view_customer_form_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer form record
            </p>
        </field>
    </record>

</odoo>
