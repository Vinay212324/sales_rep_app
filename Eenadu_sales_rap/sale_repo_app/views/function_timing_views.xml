<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_function_timing_tree" model="ir.ui.view">
        <field name="name">function.timing.tree</field>
        <field name="model">function.timing</field>
        <field name="arch" type="xml">
            <tree string="Function Timings" editable="bottom">
                <field name="name"/>
                <field name="executions"/>
                <field name="min_time"/>
                <field name="max_time"/>
                <field name="average_time"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_function_timing_form" model="ir.ui.view">
        <field name="name">function.timing.form</field>
        <field name="model">function.timing</field>
        <field name="arch" type="xml">
            <form string="Function Timing Details">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="executions"/>
                        </group>
                        <group>
                            <field name="min_time"/>
                            <field name="max_time"/>
                            <field name="average_time" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="unlink" string="Delete" type="object" class="btn-secondary" attrs="{'invisible': [('id', '=', False)]}"/>
                    <!-- Removed explicit Save button; Odoo auto-saves form changes -->
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to Open Tree View -->
    <record id="action_function_timing" model="ir.actions.act_window">
        <field name="name">Function Timings</field>
        <field name="res_model">function.timing</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_function_timing_tree"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_function_timing_root" name="Function Timing" sequence="10"/>
    <menuitem id="menu_function_timing" name="Timings" parent="menu_function_timing_root" action="action_function_timing" sequence="10"/>
</odoo>