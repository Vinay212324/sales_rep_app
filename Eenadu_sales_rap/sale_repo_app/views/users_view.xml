<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_sales_rep_tree" model="ir.ui.view">
        <field name="name">res.users.tree.custom</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="role"/>
                <field name="email"/>
                <field name="status" string="Status"/>
                <field name="unit_name"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_sales_rep_kanban" model="ir.ui.view">
        <field name="name">res.users.kanban.custom</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <kanban default_group_by="role">
                <field name="name"/>
                <field name="role"/>
                <field name="email"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_header">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div>
                                    <div>Role:
                                        <field name="role"/>
                                    </div>
                                    <div>Email:
                                        <field name="email"/>
                                    </div>
                                    <div>Status:
                                        <field name="status"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_users_form_inherit" model="ir.ui.view">
        <field name="name">res.users.form</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form string="Users">
                <header>
                    <field name="status"
                           widget="statusbar"
                           options="{'clickable': True}"
                           attrs="{'readonly': [('edit_boll', '=', False)], 'invisible': [('id', '=', False)]}"/>
                    <field name="edit_boll" invisible="1"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                                <field name="name"  required="1"/>
                        </h1>
                        <field name="email" invisible="1"/>
                        <label for="login" string="User ID"/>
                        <h2>
                            <field name="login" />
                        </h2>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Inherited Form View -->
    <record id="view_users_form_inherit_custom" model="ir.ui.view">
        <field name="name">res.users.form.inherit.custom</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="view_users_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">

                <button name="waiting_for_approve"
                        string="Waiting"
                        type="object"
                        class="btn btn-primary"
                        attrs="{'invisible': [('id', '=', False)]}"
                />

                <button name="approved_staff"
                        string="Approve"
                        type="object"
                        class="btn btn-primary"
                        attrs="{'invisible': [('id', '=', False)]}"
                />
            </xpath>

            <xpath expr="//field[@name='login']" position="after">
                <group>
                    <field name="role" widget="selection" selection="[('agent','Staff'),
                   ('Office_staff','Office staff')]"/>
                    <field name="target" attrs="{'invisible': [('role', '!=', 'agent')]}"/>
                    <!--                    <field name="status"/>-->
                    <field name="unit_name"
                           attrs="{'invisible': ['|', ('role', '=', 'circulation_head'), ('role', '=', 'region_head')]}"/>
                    <field name="unit_name_ids"
                           attrs="{'invisible': [('role', '!=', 'circulation_head'),('role', '!=', 'region_head')]}"/>
                     <field name="aadhar_number"
                       widget="password"
                       class="aadhar-mask oe_inline_input"
                       placeholder="Enter 12-digit Aadhar"/>


<!--                    <field name="aadhar_base64" filename="aadhar_number"/>-->
<!--                    <field name="pan_number"/>-->
<!--                    <field name="Pan_base64" filename="pan_number"/>-->
                    <field name="state"/>
                    <field name="phone"/>
<!--                    <field name="user_id"/>-->
                    <field name="password" required="1" />

<!--                    <field name="root_name_id"/>-->
<!--                    <field name="present_pin_id"/>-->
                    <!--                    <field name="api_token" readonly="1"/>-->
                    <!--                    <field name="token_expiry" readonly="1"/>-->
                </group>

                <div style="display: flex; width: 100%; margin-left: 65%;">
                    <group>
                        <button name="create_record" type="object"
                                class="btn btn-primary green-button rounded-button"
                                attrs="{'invisible': [('id', '!=', False)]}"
                                >
                            Create
                        </button>
                    </group>
                </div>

            </xpath>
        </field>
    </record>

    <record id="view_users_search_inh" model="ir.ui.view">
        <field name="name">res.users.search</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <search string="Users">
                <field name="name"
                       filter_domain="['|', '|', ('name','ilike',self), ('login','ilike',self), ('email','ilike',self)]"
                       string="User"/>
                <field name="company_ids" string="Company" groups="base.group_multi_company"/>
                <field name="share"/>
                <filter name="filter_no_share" string="Internal Users" domain="[('share', '=', False)]"/>
                <filter name="filter_share" string="Portal Users" domain="[('share', '=', True)]"/>
                <separator/>
                <filter name="Inactive" string="Inactive Users" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>
    <!-- Window Action -->

    <record id="action_res_users_heirt" model="ir.actions.act_window">
        <field name="name">Approved Users</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'create': 0}</field>
        <field name="view_id" ref="view_sales_rep_tree"/>
        <field name="domain">[('status', '=', 'active')]</field>
        <field name="search_view_id" ref="view_users_search_inh"/>
        <!--            <field name="context">{'search_default_filter_no_share': 1, 'show_user_group_warning': True}</field>-->
        <field name="help">Create and manage users that will connect to the system. Users can be deactivated should
            there be a period of time during which they will/should not connect to the system. You can assign them
            groups in order to give them specific access to the applications they need to use in the system.
        </field>
    </record>


    <record id="action_res_users_inactive" model="ir.actions.act_window">
        <field name="name">Waiting Users</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'create': 0}</field>
        <field name="domain">[('status', '=', 'un_activ')]</field>
        <field name="view_id" ref="view_sales_rep_tree"/>
        <field name="search_view_id" ref="view_users_search_inh"/>
    </record>

    <record id="action_res_users_create" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_users_search_inh"/>
    </record>


    <record id="action_res_users_view1" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_sales_rep_tree"/>
        <field name="act_window_id" ref="action_res_users_heirt"/>
    </record>
    <record id="action_res_users_view2" model="ir.actions.act_window.view">
        <field eval="20" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_users_form_inherit"/>
        <field name="act_window_id" ref="action_res_users_heirt"/>
    </record>


    <record id="action_res_users_view3" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_sales_rep_tree"/>
        <field name="act_window_id" ref="action_res_users_inactive"/>
    </record>
    <record id="action_res_users_view4" model="ir.actions.act_window.view">
        <field eval="20" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_users_form_inherit"/>
        <field name="act_window_id" ref="action_res_users_inactive"/>
    </record>

    <record id="action_res_users_view5" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_sales_rep_tree"/>
        <field name="act_window_id" ref="action_res_users_create"/>
    </record>
    <record id="action_res_users_view6" model="ir.actions.act_window.view">
        <field eval="20" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_users_form_inherit"/>
        <field name="act_window_id" ref="action_res_users_create"/>
    </record>


